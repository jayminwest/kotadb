{
  "mcpServers": {
    "kotadb-bunx": {
      "command": "bunx",
      "args": ["kotadb@next", "--stdio"]
    },
    "kotadb-local-dev": {
      "command": "bun",
      "args": ["run", "/path/to/kotadb/app/src/cli.ts", "--stdio", "--toolset", "full"],
      "env": {
        "LOG_LEVEL": "debug"
      }
    }
  }
}
