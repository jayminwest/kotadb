# KotaDB environment template.
# Copy to .env and update values before running automation.

# AI orchestration (Claude) credentials
ANTHROPIC_API_KEY=
CLAUDE_CODE_PATH=claude
GITHUB_PAT=

# Bun/TypeScript service configuration
PORT=3000
KOTA_DB_PATH=data/kotadb.sqlite
KOTA_GIT_BASE_URL=https://github.com

# Database connectivity (scoped by environment)
DATABASE_URL=
DATABASE_URL_LOCAL=sqlite:///data/kotadb.sqlite
DATABASE_URL_STAGING=
DATABASE_URL_PROD=

# Automation runtime configuration
ADW_ENV=local
ADW_LOG_ROOT=.adw_logs
