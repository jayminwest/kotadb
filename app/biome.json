{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"suspicious": {
				"noConsole": "error",
				"noExplicitAny": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"useTemplate": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"files": {
		"ignore": ["tests/fixtures/parsing/errors/**"]
	},
	"overrides": [
		{
			"include": ["scripts/**/*.ts", "tests/**/*.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noConsole": "off"
					}
				}
			}
		}
	]
}
