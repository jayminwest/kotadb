{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noAssignInExpressions": "off",
        "noImplicitAnyLet": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useImportType": "off",
        "useTemplate": "off"
      }
    }
  },
  "formatter": {
    "enabled": true
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["node_modules", "data", "logs"]
  }
}
